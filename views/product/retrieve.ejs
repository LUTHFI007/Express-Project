<% title='Medicines List' %>


<div class="container mt-5">
  <h1>Medicines List</h1>

  <% if (data.length > 0) { %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th colspan="2">Action</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td>$<%= product.price %></td>
            <td><a href="update_product/<%= product._id %>" class="btn btn-primary btn-sm">Edit</a></td>
            <td><a href="delete_product/<%= product._id %>" class="btn btn-danger btn-sm">Delete</a></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>No Medicine found.</p>
  <% } %>
</div>